APP_NAME=EchoHub-Staging
APP_ENV=staging
APP_KEY=  # Generate with: php artisan key:generate
APP_DEBUG=true
APP_URL=https://staging.hub.echotravel.app

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=echohub_staging
DB_USERNAME=echohub
DB_PASSWORD=  # Set password

# Session & Cache
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=staging.hub.echotravel.app

BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=echohub_staging_

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=1  # Different DB from production

# Mail
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@staging.echotravel.app"
MAIL_FROM_NAME="${APP_NAME}"

# Matrix Configuration
MATRIX_HOMESERVER_URL=http://localhost:8009
MATRIX_SERVER_NAME=staging.hub.echotravel.app
MATRIX_ADMIN_USER=admin
MATRIX_ADMIN_PASSWORD=  # Set password

# Minerva AI Configuration
MINERVA_AI_PROVIDER=ollama
MINERVA_AI_BASE_URL=http://localhost:11434
MINERVA_AI_MODEL=llama3.2:3b

# Sanctum
SANCTUM_STATEFUL_DOMAINS=staging.hub.echotravel.app

# Vite
VITE_APP_NAME="${APP_NAME}"
