# EchoHub Development Environment Configuration

# Application
APP_NAME=EchoHub-Dev
APP_ENV=development
APP_KEY=base64:YOUR_DEV_APP_KEY_HERE
APP_DEBUG=true
APP_URL=https://dev-hub.echotravel.app

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database (Development - using existing)
DB_CONNECTION=pgsql
DB_HOST=echohub-huhpdl.1.vz1odabz5wnd1yj4osmjs8c5p
DB_PORT=5432
DB_DATABASE=echohub
DB_USERNAME=echohub
DB_PASSWORD=Speeboat2121

# Cache and Session (Development)
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=true

# Queue
QUEUE_CONNECTION=sync

# Mail Configuration (Development - use log driver)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=dev@echotravel.app
MAIL_FROM_NAME="${APP_NAME}"

# Minerva AI Integration
MINERVA_AI_PROVIDER=ollama
MINERVA_AI_BASE_URL=http://ollama-service:11434
MINERVA_AI_MODEL=qwen2.5:3b

# Security
SANCTUM_STATEFUL_DOMAINS=dev-hub.echotravel.app
SESSION_DOMAIN=.echotravel.app

# Performance (Development optimized)
OPCACHE_ENABLE=0
OPCACHE_VALIDATE_TIMESTAMPS=1

# Development Tools
TELESCOPE_ENABLED=true
CLOCKWORK_ENABLE=true
DEBUGBAR_ENABLED=true

# Hot Reloading
VITE_DEV_SERVER_URL=http://localhost:5173