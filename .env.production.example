# EchoHub Production Environment Configuration

# Application
APP_NAME=EchoHub
APP_ENV=production
APP_KEY=base64:YOUR_PRODUCTION_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://hub.echotravel.app

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database (Production)
DB_CONNECTION=pgsql
DB_HOST=dokploy-postgres.1.5d2sjehkbj30rg79o8cmp9riz
DB_PORT=5432
DB_DATABASE=echohub_production
DB_USERNAME=echohub_prod
DB_PASSWORD=EchoHub_Prod_2025!

# Cache and Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true

# Queue
QUEUE_CONNECTION=redis

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=noreply@echotravel.app
MAIL_PASSWORD=YOUR_MAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@echotravel.app
MAIL_FROM_NAME="${APP_NAME}"

# Minerva AI Integration
MINERVA_AI_PROVIDER=ollama
MINERVA_AI_BASE_URL=http://ollama-service:11434
MINERVA_AI_MODEL=qwen2.5:3b

# Matrix Chat Integration (if used)
MATRIX_HOMESERVER_URL=https://matrix.echotravel.app
MATRIX_ACCESS_TOKEN=YOUR_MATRIX_TOKEN
MATRIX_USER_ID=@echohub:echotravel.app

# Security
SANCTUM_STATEFUL_DOMAINS=hub.echotravel.app
SESSION_DOMAIN=.echotravel.app

# Performance
OPCACHE_ENABLE=1
OPCACHE_VALIDATE_TIMESTAMPS=0

# Monitoring (Optional)
SENTRY_LARAVEL_DSN=YOUR_SENTRY_DSN_HERE
TELESCOPE_ENABLED=false