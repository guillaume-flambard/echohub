# EchoHub Staging Environment Configuration

# Application
APP_NAME=EchoHub-Staging
APP_ENV=staging
APP_KEY=base64:YOUR_STAGING_APP_KEY_HERE
APP_DEBUG=true
APP_URL=https://staging-hub.echotravel.app

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database (Staging)
DB_CONNECTION=pgsql
DB_HOST=dokploy-postgres.1.5d2sjehkbj30rg79o8cmp9riz
DB_PORT=5432
DB_DATABASE=echohub_staging
DB_USERNAME=echohub_staging
DB_PASSWORD=EchoHub_Staging_2025!

# Cache and Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=true

# Queue
QUEUE_CONNECTION=redis

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (Staging - use mailtrap or similar)
MAIL_MAILER=smtp
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=YOUR_MAILTRAP_USERNAME
MAIL_PASSWORD=YOUR_MAILTRAP_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=staging@echotravel.app
MAIL_FROM_NAME="${APP_NAME}"

# Minerva AI Integration
MINERVA_AI_PROVIDER=ollama
MINERVA_AI_BASE_URL=http://ollama-service:11434
MINERVA_AI_MODEL=qwen2.5:3b

# Matrix Chat Integration (if used)
MATRIX_HOMESERVER_URL=https://matrix.echotravel.app
MATRIX_ACCESS_TOKEN=YOUR_MATRIX_TOKEN
MATRIX_USER_ID=@echohub-staging:echotravel.app

# Security
SANCTUM_STATEFUL_DOMAINS=staging-hub.echotravel.app
SESSION_DOMAIN=.echotravel.app

# Performance
OPCACHE_ENABLE=1
OPCACHE_VALIDATE_TIMESTAMPS=1

# Development Tools
TELESCOPE_ENABLED=true
CLOCKWORK_ENABLE=true