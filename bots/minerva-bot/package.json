{
  "name": "minerva-bot",
  "version": "1.0.0",
  "description": "Minerva AI bot instances for EchoHub apps",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "bun run dist/index.js",
    "type-check": "tsc --noEmit",
