# Matrix Synapse Configuration
MATRIX_SERVER_NAME=echohub.local
MATRIX_DB_PASSWORD=changeme_secure_password

# Matrix Admin User (for bot provisioning)
MATRIX_ADMIN_USER=admin
MATRIX_ADMIN_PASSWORD=changeme_admin_password

# Matrix Application Service
MATRIX_AS_TOKEN=changeme_application_service_token
MATRIX_HS_TOKEN=changeme_homeserver_token

# Minerva AI Configuration (Ollama - Local)
MINERVA_AI_PROVIDER=ollama
MINERVA_AI_BASE_URL=http://localhost:11434
MINERVA_AI_MODEL=llama3.2:3b
# No API key needed for Ollama

